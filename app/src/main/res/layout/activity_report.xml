<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.report.ReportActivity">

    <LinearLayout
        android:id="@+id/wadahtgl"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_spinner"
            android:gravity="center"
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Tanggal"
                android:textSize="13dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular" />

            <TextView
                android:id="@+id/tgl1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/bg_spinner"
                android:clickable="true"
                android:drawableEnd="@drawable/ic_calender"
                android:padding="5dp"
                android:text=""
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/wadahtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
     android:layout_marginTop="11dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wadahtgl">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_spinner"
            android:gravity="center"
            android:padding="5dp">

            <TextView
                android:textColor="@color/abu"
                android:gravity="center"
                android:layout_margin="1dp"
                android:id="@+id/id_penjualan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:text="id"
                android:fontFamily="@font/poppins_semibold"/>
            <TextView
                android:textColor="@color/abu"
                android:gravity="center"
                android:layout_margin="1dp"
                android:id="@+id/nama_pelanggan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="nama"
                android:fontFamily="@font/poppins_semibold"/>
            <TextView
                android:textColor="@color/abu"
                android:gravity="center"
                android:layout_margin="1dp"
                android:id="@+id/total_belanja"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="total belanja"
                android:fontFamily="@font/poppins_semibold"/>
            <TextView
                android:textColor="@color/abu"
                android:gravity="center"
                android:layout_margin="1dp"
                android:id="@+id/tgl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Status"
                android:fontFamily="@font/poppins_semibold"/>

        </LinearLayout>

    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/report"
       android:layout_marginTop="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/wadahtitle" />
</androidx.constraintlayout.widget.ConstraintLayout>